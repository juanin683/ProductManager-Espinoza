    <li>
        Id: {{this._id}}
    </li>
    <li>
        Titulo: {{this.title}}
    </li>
    <li>
        Descripci√≥n: {{this.description}}
    </li>
    <li>
        Precio: {{this.price}}
    </li>
    <li>
